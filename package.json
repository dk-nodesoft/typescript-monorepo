{
  "name": "@dk-softdesign/typescript-monorepo",
  "version": "1.0.0",
  "description": "Monorepo with a collection of packages and servers",
  "private": true,
  "scripts": {
    "build:nest-upload": "turbo run build --filter=nest-upload",
    "nest-upload": "turbo run dev --filter=nest-upload",
    "build": "turbo build",
    "lint-staged-files": "lint-staged --allow-empty",
    "dev": "turbo run dev",
    "lint": "turbo run lint --concurrency=1 --filter=!todo-backend-server",
    "lint:fix": "turbo run lint:fix",
    "prettier": "turbo run prettier --filter=!todo-backend-server",
    "prettier:fix": "turbo run prettier:fix",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci --concurrency=1",
    "pre-commit": "yarn lint-staged-files",
    "pre-push": "yarn run build && yarn run test",
    "dependencies:upgrade": "yarn upgrade-interactive",
    "clean:repo": "turbo run clean && rimraf yarn.lock .yarn/cache junit.xml **/node_modules .cache && yarn && yarn build",
    "clean": "turbo run clean && rimraf junit.xml yarn.lock **/node_modules .cache && yarn && yarn build"
  },
  "keywords": [
    "turbo",
    "typescript",
    "monorepo",
    "eslint",
    "prettier",
    "jest",
    "lint-staged",
    "yarn"
  ],
  "author": "Niels P. Sorensen (sorensen.niels@gmail.com)",
  "license": "ISC",
  "workspaces": [
    "servers/*",
    "packages/*",
    "udemy-microservices-with-nodejs-and-react/*",
    "tooling/*"
  ],
  "devDependencies": {
    "@dk-nodesoft/eslint-config": "*",
    "@dk-nodesoft/jest-config": "*",
    "@dk-nodesoft/typescript-config": "*",
    "@types/node": "20.10.4",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@typescript-eslint/utils": "6.13.2",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.0",
    "nodemon": "3.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "rimraf": "5.0.5",
    "shell-quote": "1.8.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "turbo": "1.11.1",
    "typescript": "5.3.3"
  },
  "packageManager": "yarn@4.0.1"
}
